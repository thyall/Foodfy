{% extends "layout.njk" %}

{% block title %}
    <title>Foodfy - Receitas</title>
{% endblock title %}

{% block styles %}
    <link rel="stylesheet" href="/styles/receitas.css">
{% endblock styles %}

{% block content %}

    <article>
        <section class="receitas">

            {% for item in items%}
            <div class="receita" id="{{loop.index0}}">
                <div class="receita_img">
                    <img src="{{item.image}}" alt="Imagem de {{item.title}}">
                </div>

                <div class="receita_content">
                    <h3>{{item.title}}</h3>
                    <p>{{item.author}}</p>
                </div>
            </div>      
            {% endfor %}

        </section>
    </article>

    <script src="/scripts/script.js"></script>
{% endblock %}