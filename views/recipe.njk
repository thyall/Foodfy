{% extends "layout.njk" %}

{% block title %}
    <title>{{item.title}}</title>
{% endblock title %}


{% block styles %}
    <link rel="stylesheet" href="/styles/style-recipe.css">
{% endblock styles %}


{% block content %}

    <section class="recipe">
        <div class="recipe-header">
            <div class="recipe-image">
                <img src="{{item.image}}" alt="Imagem de {{item.title}}">
            </div>

            <div class="recipe-name">
                <h1>{{item.title}}</h1>
                <h3>por {{item.author}}</h3>
            </div>
        </div>

        <div class="recipe-content">
            <div class="recipe-ingredients">
                <h2>Ingredientes</h2>

                <h6 id="button1">ESCONDER</h6>
            </div>

            <div class="ingredients-list">
                <ul id="content-show1">
                    {% for itens in item.ingredients %}                  
                        <li>{{itens}}</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="recipe-preparation">
                <h2>Modo de preparo</h2>

                <h6 id="button2">ESCONDER</h6>
            </div>
            <div class="preparation-list">
                
                <ul id="content-show2">
                    {% for itens in item.preparation %}                
                        <li id="content-show2">{{itens}}</li>
                    {% endfor %}
                </ul>
                
            </div>

            <div class="recipe-info">
                <h2>Informações adicionais</h2>

                <h6 id="button3">ESCONDER</h6>
            </div>
            <div class="info-text">            
                <p id="content-show3">{{item.information}}</p>
            </div>
        </div>
    </section>    

    <script src="/scripts/recipe.js"></script>

{% endblock content %}